<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.webtime.content.mapper.ContentMapper">


	<insert id="pay">
		insert into t_pay(bno, user_name, title, bank, card_num, seat_num, price) values(bno_seq.nextval ,#{user_name}, #{title}, #{bank}, #{card_num}, #{seat_num}, #{price})
	</insert>
	
